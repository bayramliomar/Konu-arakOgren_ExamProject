@model List<InterviewProject.Entities.Entities.Exam>
@{
    ViewData["Title"] = "ExamList";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Tarih</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td><a href="/Home/TakeTheExam/@item.Id">@Html.Raw(item.Name)</a></td>
                            <td>@item.CreateDate</td>
                            <td><a href="/Home/DeleteExam/@item.Id">Sil</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>